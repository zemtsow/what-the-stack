{
    "manifest_version": 3,
    "name": "WhatTheStack",
    "version": "1.2",
    "description": "program that identifies technologies on the site and server",
    "homepage_url": "https://github.com/zemtsow/what-the-stack/blob/main/privacy-policy.html",
    "permissions": [
        "tabs",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "src/pages/popup.html",
        "default_icon": {
            "16": "icons/eyes.png"
        }
    },
    "icons": {
        "16": "icons/eyes.png"
    }
}